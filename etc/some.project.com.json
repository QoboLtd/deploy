{
	"version": "1",
	"project": {
		"name": "Some Project",
		"url": "http://some.project.com",

		"source": {
			"type": "git",
			"url": "git@company.server:projects/some.project.com.git",
			"version": "master"
		},

		"commands": {
			"install": "git clone %%project.source.url%% . && git checkout %%project.source.version%%",
			"update": "git pull && git checkout %%project.source.version%%",
			"remove": "rm -rf ."
		},

		"environments": [
			{
				"name": "live",
				"url": "http://www.project.com",

				"source": {
					"version": "stable"
				},

				"commands": {
					"remove": ""
				},

				"locations": [
					{
						"name": "web1",
						"type": "ssh",
						"params": {
							"user": "some-user",
							"host": "some-web-host1",
							"dir": "/va/www/vhosts/some.project.com"
						}
					},
				]
			},
		]
	}
}
