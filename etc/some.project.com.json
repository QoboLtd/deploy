{
		"type": "project",
		"name": "Some Project",

		"url": "http://some.project.com",

		"commands": {
			"install": { 
				"type": "command", 
				"command": "git %%foobar%% clone %%source.url%% . && git checkout %%source.version%%" 
			},
			"update":  { 
				"type": "command", 
				"command": "git pull && git checkout %%source.version%%" 
			},
			"remove":  { 
				"type": "command", 
				"command": "rm -rf ." 
			}
		},

		"environments": {
			"live": {
				"type": "environment",

				"url": "http://www.project.com",

				"commands": {
					"remove": { 
						"type": "command", 
						"command": "" 
					}
				},

				"locations": {
					"localhost": {
						"type": "location",

						"protocol": "ssh",
						"params": {
							"user": "some-user",
							"host": "some-web-host1",
							"dir": "/va/www/vhosts/some.project.com"
						}
					}
				}
			}
		}
}
